{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "baseUrl": "src",
    "paths": {
      "@app/*": [
        "app/*"
      ],
      "@processes/*": [
        "processes/*"
      ],
      "@pages/*": [
        "pages/*"
      ],
      "@widgets/*": [
        "widgets/*"
      ],
      "@shared/*": [
        "shared/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts"
  ],
  "plugins": [
    {
      "name": "typescript-plugin-css-modules"
    }
  ]
}
